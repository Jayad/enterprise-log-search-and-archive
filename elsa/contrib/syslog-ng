#!/bin/bash
#
# Init file for searchd
#
# chkconfig: 2345 55 25
#
# description: searchd 
#
# USE "chkconfig --add searchd" to configure Sphinx searchd service
#
# by Vladimir Fedorkov Mar 1, 2006, info@astellar.com
# public domain

BASE_PATH=/usr/local/syslog-ng
EXEC_PATH=$BASE_PATH/sbin
PID_FILE=$BASE_PATH/var/syslog-ng.pid

RETVAL=0
prog="syslog-ng"

do_start() {
	echo "Starting $prog"
	start-stop-daemon --start --exec $EXEC_PATH/$prog
	RETVAL=$?
	echo
	return $RETVAL
}

do_stop() {
	echo "Stopping $prog"
	if [ -e $PID_FILE ] ; then
		kill -15 `cat $PID_FILE`
		sleep 5
		# Make sure elsa.pl died
		kill -15 $(pgrep -f elsa.pl)
		if [ -e $PID_FILE ] ; then
			kill -9 `cat $PID_FILE`
		fi
	fi
	RETVAL=$?
	echo
	return $RETVAL
}

case $* in
restart)
	do_stop
	do_start
	;;
start)
	do_start
	;;

stop)
	do_stop
	;;

*)
	echo "usage: $0 {start|stop|restart}" >&2

	exit 1
	;;
esac

exit $RETVAL
